<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
		MaxWidth="400" MaxHeight="200"
		WindowStartupLocation="CenterOwner"
		x:Class="Ornate.Lite.Dialogs.ProgressBarWindow"
        Title="Progress Bar">
	<Panel>
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="{Binding Text}"></TextBlock>
        <ProgressBar HorizontalAlignment="Center" VerticalAlignment="Center" Minimum="{Binding Min}" Maximum="{Binding Max}" Value="{Binding Value}" ShowProgressText="True"></ProgressBar>
	</Panel>
</Window>
