<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
		MaxWidth="400" MaxHeight="200"
		WindowStartupLocation="CenterOwner"
        x:Class="Ornate.Lite.Dialogs.OKWindow"
        Title="Info">
	<Panel>
		<TextBlock HorizontalAlignment="Center" Text="{Binding Prompt}" TextWrapping="Wrap">Prompt</TextBlock>
		<Button Name="abort" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="OnClick">OK</Button>
	</Panel>
</Window>
