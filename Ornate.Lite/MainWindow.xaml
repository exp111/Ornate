<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Ornate.Lite.MainWindow"
        MinWidth="500"
        MinHeight="300"
        Title="Ornate.Lite">
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenuItem.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Open Dev Tools..." Clicked="OnOpenDevToolsNativeMenuItemClick"/>
                        <NativeMenuItem Header="Reload Game" Clicked="OnReloadGameNativeMenuItemClick" />
                    </NativeMenu>
                </NativeMenuItem.Menu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>
    
    <DockPanel>
        <Menu Name="mainMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Dev Tools..." Click="OnOpenDevToolsMenuItemClick"/>
                <MenuItem Header="_Reload Game" Click="OnReloadGameMenuItemClick" />
            </MenuItem>
        </Menu>

		<!--
		<TabControl Name="tabControl">
        </TabControl>-->
		<Decorator Name="browser"></Decorator>
    </DockPanel>
</Window>